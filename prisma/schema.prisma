generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order{
  id                 String       @id @default(uuid()) @db.Uuid
  status             Status_Order      @default(BOOKED)
  customer_id        String      @db.Uuid
  address            String
  description        String

  Customer           Customer    @relation(fields: [customer_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model Customer{
  id                 String      @id @default(uuid()) @db.Uuid
  phone              String      @unique
  first_name         String
  last_name          String

  Order              Order[]
}

enum Status_Order{
  BOOKED
  CLEAN_UP
  COMPLETED
}