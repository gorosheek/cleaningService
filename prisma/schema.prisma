generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model OldOrder{
  id                 String       @id @default(uuid()) @db.Uuid
  status             Status_Order      @default(CLEANING)
  customer_id        String       @db.Uuid
  address            String
  description        String

  Customer           Customer    @relation(fields: [customer_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model Order{
  id                 String      @id @default(uuid()) @db.Uuid
  status             Status_Order      @default(CLEANING)
  room_number        String          @default("0")
  x                  String          @default("0")
  y                  String          @default("0")
  order_type         Order_Type      @default(FULL)
}

model CutomerCleaningOrder{
  id                 String      @id @default(uuid()) @db.Uuid
  status             Status_Order      @default(CLEANING)
  room_id            String       @db.Uuid
  hotel_id           String
  cleaning_type      String
}

model Customer{
  id                 String      @id @default(uuid()) @db.Uuid
  phone              String      @unique
  first_name         String
  last_name          String

  OldOrder           OldOrder[]
}

enum Status_Order{
  CLEANING
  COMPLETED
}

enum Order_Type{
  FULL
  TECHNICAL
}